FROM golang:1.21-alpine

WORKDIR /app

# 必要なパッケージをインストール
RUN apk add --no-cache git

# go.modとgo.sumをコピー
COPY go.mod go.sum ./

# 依存関係をダウンロード
RUN go mod download

# ソースコードをコピー
COPY . .

# アプリケーションをビルド
RUN go build -o bin/api cmd/api/main.go

# ポート8080を公開
EXPOSE 8080

# アプリケーションを実行
CMD ["go", "run", "cmd/api/main.go"] 