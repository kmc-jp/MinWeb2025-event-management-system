FROM golang:1.21-alpine

WORKDIR /app

# 必要なパッケージをインストール
RUN apk add --no-cache git

# go.modとgo.sumをコピー
COPY go.mod go.sum ./

# 依存関係をダウンロードしてvendorディレクトリを作成
RUN go mod download && go mod vendor

# ソースコードをコピー
COPY . .

# アプリケーションをビルド（vendorディレクトリを使用）
RUN go build -mod=vendor -o bin/api cmd/api/main.go

# ポート8080を公開
EXPOSE 8080

# アプリケーションを実行
CMD ["go", "run", "-mod=vendor", "cmd/api/main.go"] 